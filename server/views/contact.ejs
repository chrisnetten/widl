<%- include partials/header.ejs %>

    <section id="contact-section">
        <div class="wow rollIn"><h1> Contact Us </h1></div>
        <form id="contact_form" action="/send" method="POST">


            <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-envelope-o fa-fw"></i></span>
                <input class="form-control" name="email" type="email" placeholder="Email address" required>
            </div>

            <br>

            <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-user fa-fw"></i></span>
                <input class="form-control" name="name" type="name" placeholder="Name" required>
            </div>

            <br>

            <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-book fa-fw"></i></span>
                <textarea id="message" class="form-control" placeholder="Write Message:" name="message" rows="6" cols="8" required></textarea>
                <br />
            </div>

            <br>

            <div class="submitButton">
                <input id="submit_button" class="btn btn-danger wow bounceInDown" type="submit" value="Send Email" />
            </div>
        </form>
    </section>

